<h1>Admin Dashboard</h1>

<section>
  <h2>Photos</h2>
  <ul>
    <% @photos.each do |photo| %>
      <li>
        <strong><%= photo.title %></strong>
        <% if photo.images.attached? %>
          <ul>
            <% photo.images.each do |image| %>
              <li>
                <%= link_to admin_photo_path(photo) do %>
                  <%= image_tag image, alt: photo.title, width: 100 %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
        <%= link_to 'Edit', edit_admin_photo_path(photo) %> |
        <%= link_to 'Delete', admin_photo_path(photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' } %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add New Photo', new_admin_photo_path %>
</section>
