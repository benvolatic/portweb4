<h1>Edit Photo</h1>

<%= form_with model: @photo, url: admin_photo_path(@photo), method: :patch, local: true do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title, required: true, value: @photo.title %>
  </div>

  <div>
    <%= f.label :description, "Description" %><br>
    <%= f.text_area :description, value: @photo.description %>
  </div>

  <div>
    <%= f.label :images, "Upload New Images" %><br>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div>
    <%= f.submit "Update Photo" %>
  </div>
<% end %>
