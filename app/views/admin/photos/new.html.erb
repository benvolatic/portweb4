<h1>New Photo</h1>

<%= form_with model: @photo, url: admin_photos_path, local: true do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :description, "Description" %><br>
    <%= f.text_area :description, rows: 3 %>
  </div>

  <div>
    <%= f.label :images, "Upload Images" %><br>
    <%= f.file_field :images, multiple: true, accept: "image/png,image/jpeg,image/jpg" %>
  </div>

  <div>
    <%= f.submit "Create Photo(s)" %>
  </div>
<% end %>

<%= link_to 'Back to Photos', admin_photos_path %>
