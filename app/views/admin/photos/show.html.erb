<h1><%= @photo.title %></h1>

<p><strong>Description:</strong></p>
<p><%= @photo.description %></p>

<h2>Image:</h2>
<% if @photo.images.attached? %>
  <% @photo.images.each do |image| %>
    <%= image_tag image, alt: @photo.title, width: 300 %>
  <% end %>
<% end %>

<div class="photo-navigation">
  <!-- Previous Link -->
  <% if @previous_photo %>
    <%= link_to '← Previous', admin_photo_path(@previous_photo), class: "btn btn-secondary" %>
  <% end %>

  <!-- Next Link -->
  <% if @next_photo %>
    <%= link_to 'Next →', admin_photo_path(@next_photo), class: "btn btn-secondary" %>
  <% end %>
</div>

<div>
  <%= link_to 'Edit Photo', edit_admin_photo_path(@photo) %> |
  <%= link_to 'Delete Photo', admin_photo_path(@photo), 
            method: :delete, 
            data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this photo?' }, 
            class: "btn btn-danger" %>

  <%= link_to 'Back to Photos', admin_photos_path %>
</div>
