<h1>Admin Login</h1>

<%= form_with url: admin_login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email, required: true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>
  <div>
    <%= f.submit 'Log in' %>
  </div>
<% end %>
